<!DOCTYPE html>
<html>
<head>
  <title>New Product</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
<div class="container my-4">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">RubyPhone</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/profile">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cart">Cart</a>
        </li>
      </ul>
    </div>
  </nav>

  <h1>New Product</h1>

  <%= form_with(model: @product, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
        <div class="invalid-feedback">Please provide a name.</div>
      </div>
      <div class="col-md-6 mb-3">
        <%= form.label :price, class: "form-label" %>
        <%= form.number_field :price, class: "form-control", required: true %>
        <div class="invalid-feedback">Please provide a price.</div>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :weight, class: "form-label" %>
      <%= form.number_field :weight, class: "form-control", rows: 1, required: true %>
      <div class="invalid-feedback">Please provide a weight.</div>
    </div>

    <div class="mb-3">
      <%= form.label :screen, class: "form-label" %>
      <%= form.text_area :screen, class: "form-control", rows: 1, required: true %>
      <div class="invalid-feedback">Please provide a screen dimension.</div>
    </div>

    <div class="mb-3">
      <%= form.label :memory, class: "form-label" %>
      <%= form.text_area :memory, class: "form-control", rows: 1, required: true %>
      <div class="invalid-feedback">Please provide a memory size.</div>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 5, required: true %>
      <div class="invalid-feedback">Please provide a description.</div>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control-file", required: true %>
      <div class="invalid-feedback">Please provide an image.</div>
    </div>

    <%= form.submit "Create Product", class: "btn btn-primary" %>
  <% end %>
</div>
</body>
</html>